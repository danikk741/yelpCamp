<% include ./partials/header %>
<div class="row">
    <div class="col-md-12 text-center">
        <h1>Reset Password</h1>
    </div>
	<div class="col-md-12">
		<form class="form-signin" action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="inputPassword">New Password</label>
                <input type="password" id="inputPassword" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="inputConfirm">Confirm Password</label>
                <input type="password" id="inputConfirm" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
            </div>
            <div class="form-group">
		    <button type="submit" class="btn btn-primary">Update Password</button>
		    </div>
		</form>
	</div>
</div>
<% include ./partials/footer %>