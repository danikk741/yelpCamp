<%include partials/header%>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Reset Password</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form class="form-signin" action="/forgot" method="POST">
            <div class="form-group">
                <label for="inputEmail">Enter your email address:</label>
                <input class="form-control" id="inputEmail" type="email" name="email" autofocus>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Send Email</button>
            </div>
        </form>
        <div class="form-signin">
            <a href="/login">Go Back</a>
        </div>
    </div>
</div>

<%include partials/footer%>