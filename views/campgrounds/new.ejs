<%include ../partials/header%>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Create a New Campground</h1>
    </div>
    <div class="col-md-6 col-xs-12 col-lg-4">
        <form class="form-signin" action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputName">Name</label>
                <input type="text" id="inputName" class="form-control" placeholder="Name" required autofocus name="name" required>
            </div>
            
            <div class="form-group">
                <label for="inputImage">Image</label>
                <input type="file" id="image" id="inputImage" name="image" accept="image/*" required>
            </div>
            
            <div class="form-group">
                <label for="inputPrice">Price</label>
                <input class="form-control" id="inputPrice" type="number" placeholder="Price" name="price" min="0.01" step="0.01" required>
            </div>
            
            <div class="form-group">
                <label for="inputDescription">Description</label>
                <input class="form-control" id="inputDescription" type="text" placeholder="Description" name="description" required>
            </div>
            

            <div class="form-group">
                <label for="inputLocation">Location</label>
                <input class="form-control" id="inputLocation" type="text" name="location" placeholder="Yosemite National Park, CA" required>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <div class="form-under">
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
<%include ../partials/footer%>